<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_teacher_video"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/home_btn"
        android:layout_marginTop="@dimen/home_btn"
        android:background="@drawable/layout_beijing"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddinglr"
        android:paddingRight="@dimen/paddinglr" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ship" />

        <TextView
            android:id="@+id/text_teacher_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:paddingLeft="@dimen/paddinglr"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/layout_jiantou" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/home_btn"
        android:layout_marginTop="@dimen/home_btn"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddinglr"
        android:paddingRight="@dimen/paddinglr" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point_listview_type"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_teacher_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/home_btn"
        android:layout_marginTop="@dimen/home_btn"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddinglr"
        android:paddingRight="@dimen/paddinglr" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point_listview_anchor"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_teacher_anchor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/home_btn"
        android:layout_marginTop="@dimen/home_btn"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddinglr"
        android:paddingRight="@dimen/paddinglr" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point_listview_date"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_teacher_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/home_btn"
        android:layout_marginTop="@dimen/home_btn"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddinglr"
        android:paddingRight="@dimen/paddinglr" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point_listview_password"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_teacher_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/point_listview_acquire"
            android:textColor="#0077b7"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>