<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hui"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_h"
        android:background="#0077b7"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <Button
            android:id="@+id/backbtn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/back_button"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="15dp"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <!-- style="@style/titlebar_left_textview" -->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/label7"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_title_s" >
        </TextView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/secret"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_new" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/about_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/corner_round_top"
            android:onClick="onClick"
            android:text="在线交易"
            android:textColor="@color/orange"
            android:textSize="22sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/about_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="1px"
            android:background="@color/corner_shape"
            android:gravity="center"
            android:onClick="onClick"
            android:text="客服帮助"
            android:textColor="@color/orange"
            android:textSize="22sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/about_03"
            style="@style/help_btn"
            android:text="技术支持" />

        <Button
            android:id="@+id/about_04"
            style="@style/help_btn"
            android:text="意见反馈" />

        <Button
            android:id="@+id/about_05"
            style="@style/help_btn"
            android:text="版本更新" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/paddinglr"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="bottom|center_horizontal"
        android:onClick="onClick"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/directions2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:gravity="bottom|center_horizontal"
        android:onClick="onClick"
        android:textColor="@color/color_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/directions3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:gravity="bottom|center_horizontal"
        android:onClick="onClick"
        android:textColor="@color/color_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="bottom|center_horizontal"
        android:onClick="onClick"
        android:textColor="@color/nextBlack"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/directions1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:gravity="bottom|center_horizontal"
        android:onClick="onClick"
        android:textColor="@color/nextBlack"
        android:textSize="14sp" />

</LinearLayout>